<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_logo"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            app:cardCornerRadius="20dp"

            >
            <ImageView
                android:id="@+id/imageView_team_logo_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
               ></ImageView>
        </androidx.cardview.widget.CardView>




        <TextView
            android:id="@+id/textView_item_team_name_detail_font_size"
            android:layout_below="@id/cardView_logo"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_team_name_detail_font_size_2"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/logo_main_2"
            ></TextView>

        <TextView
            android:id="@+id/textView_kurulus_tarih"
            android:layout_below="@id/textView_item_team_name_detail_font_size"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/logo_main_2"
            android:gravity="center"
            ></TextView>

        <androidx.cardview.widget.CardView
            android:layout_below="@id/textView_kurulus_tarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/transparent"
            >




            <TextView
                android:id="@+id/textView_detail_of_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/item_team_name_detail_font_size_2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/logo_main_2"
                ></TextView>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>